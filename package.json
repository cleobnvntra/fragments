{
  "name": "fragments",
  "private": true,
  "version": "0.10.0",
  "description": "An API Server that is a node.js based REST API using Express",
  "main": "index.js",
  "scripts": {
    "test:integration": "hurl --test --glob \"tests/integration/**/*.hurl\"",
    "test:watch": "jest -c jest.config.js --runInBand --watch --",
    "test": "jest -c jest.config.js --runInBand --detectOpenHandles --",
    "coverage": "jest -c jest.config.js --runInBand --coverage",
    "lint": "eslint --config .eslintrc.js \"./src/**/*.js\" \"tests/**/*.js\"",
    "start": "nodemon src/index.js",
    "dev": "cross-env LOG_LEVEL=debug nodemon ./src/index.js --watch src | pino-pretty",
    "debug": "cross-env LOG_LEVEL=debug nodemon --inspect=0.0.0.0:9229 ./src/index.js --watch src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cleobnvntra/fragments.git"
  },
  "keywords": [],
  "author": "Cleo Buenaventura",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/cleobnvntra/fragments/issues"
  },
  "homepage": "https://github.com/cleobnvntra/fragments#readme",
  "devDependencies": {
    "@orangeopensource/hurl": "^4.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "2.8.8",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.382.0",
    "@aws-sdk/client-s3": "^3.378.0",
    "@aws-sdk/lib-dynamodb": "^3.382.0",
    "aws-jwt-verify": "^4.0.0",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "http-auth": "^4.2.0",
    "http-auth-passport": "^1.0.7",
    "jsonwebtoken": "^9.0.0",
    "markdown-it": "^13.0.1",
    "passport": "^0.6.0",
    "passport-http-bearer": "^1.0.1",
    "pino": "^8.14.1",
    "pino-http": "^8.3.3",
    "pino-pretty": "^10.0.0",
    "sharp": "^0.32.4",
    "stoppable": "^1.1.0"
  }
}
